                                Please provide a valid car name.
                            </div>
                        </div>

                        <!-- Car Subtitle -->
                        <div class="mb-3">
                            <label for="editCarSubtitle" class="form-label">
                                <i class="bi bi-info-circle me-1"></i>Subtitle/Description
                            </label>
                            <input type="text" class="form-control" id="editCarSubtitle" required>
                            <div class="invalid-feedback">
                                Please provide a valid subtitle.
                            </div>
                        </div>

                        <!-- Price and Quantity Row -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="editCarPrice" class="form-label">
                                        <i class="bi bi-currency-euro me-1"></i>Price (€)
                                    </label>
                                    <input type="number" class="form-control" id="editCarPrice" min="1" max="10000" required>
                                    <div class="invalid-feedback">
                                        Price must be between 1 and 10,000.
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="editCarQuantity" class="form-label">
                                        <i class="bi bi-hash me-1"></i>Quantity
                                    </label>
                                    <input type="number" class="form-control" id="editCarQuantity" min="0" max="999" required>
                                    <div class="invalid-feedback">
                                        Quantity must be between 0 and 999.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Image URL -->
                        <div class="mb-3">
                            <label for="editCarImage" class="form-label">
                                <i class="bi bi-image me-1"></i>Image URL
                            </label>
                            <input type="url" class="form-control" id="editCarImage" required>
                            <div class="invalid-feedback">
                                Please provide a valid image URL.
                            </div>
                        </div>

                        <!-- Alt Text -->
                        <div class="mb-3">
                            <label for="editCarAlt" class="form-label">
                                <i class="bi bi-alt me-1"></i>Alt Text
                            </label>
                            <input type="text" class="form-control" id="editCarAlt" required>
                            <div class="invalid-feedback">
                                Please provide valid alt text.
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" onclick="cancelEdit()">
                        <i class="bi bi-x-circle me-1"></i>Cancel
                    </button>
                    <button type="button" class="btn btn-primary" onclick="updateVehicle()">
                        <i class="bi bi-check-circle me-1"></i>Save Changes
                    </button>
                </div>
            </div>
        </div>
    </div>

