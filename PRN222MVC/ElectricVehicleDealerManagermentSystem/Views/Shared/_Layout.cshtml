                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    
                    @{
                        var token = Context.Request.Cookies["X-Access-Token"];
                        var username = "User";
                        var isNonAdmin = false;
                        var isAdmin = false;
                        var isDealerManager = false;
                        
                        if (!string.IsNullOrEmpty(token))
                        {
                            try
                            {
                                // Simple JWT decode - split by dots and decode payload
                                var parts = token.Split('.');
                                if (parts.Length == 3)
                                {
                                    var payload = parts[1];
                                    // Add padding if needed
                                    switch (payload.Length % 4)
                                    {
                                        case 2: payload += "=="; break;
                                        case 3: payload += "="; break;
                                    }
                                    
                                    var jsonBytes = Convert.FromBase64String(payload);
                                    var json = System.Text.Encoding.UTF8.GetString(jsonBytes);
                                    
                                    // Extract username
                                    if (json.Contains("\"Username\""))
                                    {
                                        var nameStart = json.IndexOf("\"Username\":\"") + 12;
                                        var nameEnd = json.IndexOf("\"", nameStart);
                                        if (nameEnd > nameStart)
                                        {
                                            username = json.Substring(nameStart, nameEnd - nameStart);
                                        }
                                    }
                                    
                                    // Extract role
                                    if (json.Contains("\"http://schemas.microsoft.com/ws/2008/06/identity/claims/role\""))
                                    {
                                        var roleStart = json.IndexOf("\"http://schemas.microsoft.com/ws/2008/06/identity/claims/role\":\"") + 64;
                                        var roleEnd = json.IndexOf("\"", roleStart);
                                        if (roleEnd > roleStart)
                                        {
                                            var role = json.Substring(roleStart, roleEnd - roleStart);
                                            isAdmin = role == "Admin";
                                            isDealerManager = role == "DealerManager" || role.Contains("Dealer");
                                            isNonAdmin = !isAdmin && !isDealerManager;
                                        }
                                    }
                                    // Try alternative role claim
                                    else if (json.Contains("\"role\""))
                                    {
                                        var roleStart = json.IndexOf("\"role\":\"") + 8;
                                        var roleEnd = json.IndexOf("\"", roleStart);
                                        if (roleEnd > roleStart)
                                        {
                                            var role = json.Substring(roleStart, roleEnd - roleStart);
                                            isAdmin = role == "Admin";
                                            isDealerManager = role == "DealerManager" || role.Contains("Dealer");
                                            isNonAdmin = !isAdmin && !isDealerManager;
                                        }
                                    }
                                }
                            }
                            catch
                            {
                                // If parsing fails, just show basic welcome
                                isNonAdmin = true;
                            }
                        }
                    }
                    
                    @if (!string.IsNullOrEmpty(token) && isAdmin)
                    {
                        <li><a asp-area="" asp-controller="Admin" asp-action="Dashboard" style="color: #ff6b35; font-weight: bold;">
                            <i class="bi bi-speedometer2"></i> Admin Dashboard
                        </a></li>
                        <li><a href="#" style="color: #999;"><i class="bi bi-person-circle"></i> Welcome, @username</a></li>
                        <li><a asp-area="" asp-controller="Account" asp-action="Logout">Logout</a></li>
                    }
                    else if (!string.IsNullOrEmpty(token) && isDealerManager)
                    {
                        <li><a asp-area="" asp-controller="Dealer" asp-action="Dashboard" style="color: #3498db; font-weight: bold;">
                            <i class="bi bi-speedometer2"></i> Dealer Dashboard
                        </a></li>
                        <li><a href="#" style="color: #999;"><i class="bi bi-person-circle"></i> Welcome, @username</a></li>
                        <li><a asp-area="" asp-controller="Account" asp-action="Logout">Logout</a></li>
                    }
                    else if (!string.IsNullOrEmpty(token) && isNonAdmin)
                    {
                        <li><a href="#" style="color: #999;"><i class="bi bi-person-circle"></i> Welcome, @username</a></li>
                        <li><a asp-area="" asp-controller="Account" asp-action="Logout">Logout</a></li>
                    }
                    else
                    {
                        <li><a asp-area="" asp-controller="Account" asp-action="Login">Login</a></li>
                    }
                </ul>
                <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
            </nav>

        </div>
