                        <i class="bi bi-box-arrow-right" style="font-size: 16px;" title="Logout"></i>
                    </a>
                </div>
            </div>

            <!-- Content Area -->
            <div class="content-area">
                <main role="main">
                    @RenderBody()
                </main>
            </div>
