@model BusinessObject.BusinessObject.CategoryModels.Request.AddCategoryResquest

@{
    ViewData["Title"] = "Add Category";
}

<h2>Add Category</h2>

<form asp-controller="Category" asp-action="AddCategory" method="post">
    @Html.AntiForgeryToken()
    
    <div class="form-group">
        <label asp-for="Name">Category Name</label>
        <input asp-for="Name" class="form-control" placeholder="Enter category name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Add Category</button>
        <a asp-controller="Category" asp-action="IndexCategory" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


