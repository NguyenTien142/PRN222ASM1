@model BusinessObject.BusinessObject.CategoryModels.Request.UpdateCategoryRequest

@{
    ViewData["Title"] = "Update Category";
}

<h2>Update Category</h2>

<form asp-controller="Category" asp-action="UpdateCategory" asp-route-categoryId="@Model.CategoryId" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="CategoryId" />
    
    <div class="form-group">
        <label asp-for="Name">Category Name</label>
        <input asp-for="Name" class="form-control" placeholder="Enter category name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Update Category</button>
        <a asp-controller="Category" asp-action="IndexCategory" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
