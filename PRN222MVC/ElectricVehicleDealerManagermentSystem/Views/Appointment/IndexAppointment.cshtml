@model IEnumerable<BusinessObject.BusinessObject.Appointment.Respond.GetAppointmentRespond>

@{
    Layout = "~/Views/Shared/Dealer_Layout.cshtml";
}

<div class="container" >
    <div class="row mb-4">
        <div class="col d-flex align-items-center justify-content-between">
            <h2 class="mb-0">Appointments</h2>
            <a href="/Appointment/ViewVehicle" class="btn btn-primary">View Vehicle</a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Customer</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Vehicle</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model)
                {
                    <tr>
                        <td>@a.CustomerName</td>
                        <td>@a.CustomerEmail</td>
                        <td>@a.CustomerPhone</td>
                        <td>@a.VehicleModel (@a.VehicleColor)</td>
                        <td>@a.AppointmentDate.ToString("g")</td>
                        <td>
                            @if (a.Status == "Pending")
                            {
                                <span class="badge bg-warning">@a.Status</span>
                            }
                            else if (a.Status == "Approved")
                            {
                                <span class="badge bg-success">@a.Status</span>
                            }
                            else if (a.Status == "Rejected")
                            {
                                <span class="badge bg-danger">@a.Status</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@a.Status</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@a.AppointmentId" class="btn btn-info btn-sm">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>