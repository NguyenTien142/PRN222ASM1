@using BusinessObject.BusinessObject.VehicleModels.Respond
@model List<GetVehicleRespond>

<div class="container mt-5">
    <div class="row align-items-center mb-4" style="margin-top: 96px;">
        <div class="col d-flex align-items-center">
            <h2 class="mb-0">Vehicles For Test Drive</h2>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Vehicle ID</th>
                    <th>Model</th>
                    <th>Color</th>
                    <th>Price</th>
                    <th>Manufacture Date</th>
                    <th>Version</th>
                    <th>Image</th>
                    <th>Book Appointment</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var vehicle in Model)
                {
                    <tr>
                        <td>@vehicle.VehicleId</td>
                        <td>@vehicle.Model</td>
                        <td>@vehicle.Color</td>
                        <td>@vehicle.Price.ToString("C")</td>
                        <td>@vehicle.ManufactureDate.ToString("yyyy-MM-dd")</td>
                        <td>@vehicle.Version</td>
                        <td>
                            @if (!string.IsNullOrEmpty(vehicle.Image))
                            {
                                <img src="@vehicle.Image" alt="Vehicle Image" style="max-width:100px;max-height:100px;" />
                            }
                        </td>
                        <td>
                            <a asp-controller="Appointment" asp-action="Create" asp-route-vehicleId="@vehicle.VehicleId" class="btn btn-success">Book</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
