@model IEnumerable<BusinessObject.BusinessObject.Appointment.Respond.GetAppointmentRespond>

@{
    Layout = "~/Views/Shared/Dealer_Layout.cshtml";
}

<div class="container">
    <div class="row mb-4">
        <div class="col d-flex align-items-center justify-content-between">
            <h2 class="mb-0">Appointment Management</h2>
            <span class="text-muted">Manage all appointments</span>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Customer</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Vehicle</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.AllAppointments != null && ((IEnumerable<BusinessObject.BusinessObject.Appointment.Respond.GetAppointmentRespond>)ViewBag.AllAppointments).Any())
                {
                    @foreach (var appointment in (IEnumerable<BusinessObject.BusinessObject.Appointment.Respond.GetAppointmentRespond>)ViewBag.AllAppointments)
                    {
                        <tr>
                            <td>@appointment.CustomerName</td>
                            <td>@appointment.CustomerEmail</td>
                            <td>@appointment.CustomerPhone</td>
                            <td>@appointment.VehicleModel (@appointment.VehicleColor)</td>
                            <td>@appointment.AppointmentDate.ToString("g")</td>
                            <td>
                                @if (appointment.Status == "Pending")
                                {
                                    <span class="badge bg-warning">@appointment.Status</span>
                                }
                                else if (appointment.Status == "Approved")
                                {
                                    <span class="badge bg-success">@appointment.Status</span>
                                }
                                else if (appointment.Status == "Rejected")
                                {
                                    <span class="badge bg-danger">@appointment.Status</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@appointment.Status</span>
                                }
                            </td>
                            <td>
                                @if (appointment.Status == "Pending")
                                {
                                    <form asp-action="ApproveAppointment" method="post" style="display: inline;">
                                        <input type="hidden" name="AppointmentId" value="@appointment.AppointmentId" />
                                        <button type="submit" class="btn btn-success btn-sm"
                                                onclick="return confirm('Are you sure you want to approve this appointment?')">
                                            Approve
                                        </button>
                                    </form>

                                    <form asp-action="RejectAppointment" method="post" style="display: inline; margin-left: 5px;">
                                        <input type="hidden" name="AppointmentId" value="@appointment.AppointmentId" />
                                        <button type="submit" class="btn btn-danger btn-sm"
                                                onclick="return confirm('Are you sure you want to reject this appointment?')">
                                            Reject
                                        </button>
                                    </form>

                                    <a asp-action="Details" asp-controller="Appointment" asp-route-id="@appointment.AppointmentId"
                                       class="btn btn-info btn-sm" style="margin-left: 5px;">
                                        Details
                                    </a>
                                }
                                else
                                {
                                    <a asp-action="Details" asp-controller="Appointment" asp-route-id="@appointment.AppointmentId"
                                       class="btn btn-info btn-sm">
                                        Details
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted">
                            No appointments found.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut();
        }, 5000);
    </script>
}
