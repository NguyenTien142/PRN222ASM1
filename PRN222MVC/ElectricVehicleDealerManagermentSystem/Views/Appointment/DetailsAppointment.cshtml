@model BusinessObject.BusinessObject.Appointment.Respond.GetAppointmentRespond


<div class="container" style="margin-top: 100px; margin-bottom: 40px;">
	<div class="row mb-4">
		<div class="col">
			<h2 class="mb-0">Appointment Details</h2>
		</div>
	</div>

	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Customer Information</h4>
			<p><strong>Name:</strong> @Model.CustomerName</p>
			<p><strong>Email:</strong> @Model.CustomerEmail</p>
			<p><strong>Phone:</strong> @Model.CustomerPhone</p>

			<h4 class="card-title mt-4">Vehicle Information</h4>
			<p><strong>Model:</strong> @Model.VehicleModel</p>
			<p><strong>Color:</strong> @Model.VehicleColor</p>
			<p><strong>Version:</strong> @Model.VehicleVersion</p>

			<h4 class="card-title mt-4">Appointment</h4>
			<p><strong>Date:</strong> @Model.AppointmentDate.ToString("f")</p>
		</div>
	</div>

	<div class="mt-3">
		<a asp-action="Index" class="btn btn-secondary">Back to List</a>
	</div>
</div>
