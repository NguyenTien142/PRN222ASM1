@{
    ViewData["Title"] = "Dealer Manager Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .dealer-dashboard {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            padding: 120px 0 40px 0;
        }

        .dashboard-header {
            background: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            margin-bottom: 30px;
            text-align: center;
        }

        .dashboard-header h1 {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .debug-info {
            background: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
            font-family: monospace;
            font-size: 12px;
        }

        .stats-container {
            background: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            margin-bottom: 30px;
        }

        .stat-card {
            background: white;
            border-radius: 12px;
            padding: 25px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            transition: transform 0.3s ease;
            text-align: center;
            border: 1px solid #eee;
        }

        .stat-card:hover {
            transform: translateY(-5px);
        }

        .stat-card .stat-icon {
            width: 60px;
            height: 60px;
            border-radius: 12px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 15px;
            color: white;
            font-size: 24px;
        }

        .stat-info h4 {
            font-size: 14px;
            color: #6c757d;
            margin-bottom: 5px;
            font-weight: 500;
        }

        .stat-number {
            font-size: 28px;
            font-weight: 700;
            color: #2c3e50;
            margin: 0;
        }

        .action-cards {
            background: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .action-card {
            background: white;
            border-radius: 12px;
            padding: 25px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            transition: all 0.3s ease;
            border: 1px solid #eee;
            height: 100%;
            text-align: center;
        }

        .action-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        }

        .action-icon {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 10px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 24px;
            margin-bottom: 20px;
        }

        .action-content h4 {
            font-size: 18px;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 10px;
        }

        .action-content p {
            color: #6c757d;
            font-size: 14px;
            margin-bottom: 20px;
        }

        .bg-primary { background-color: #667eea !important; }
        .bg-warning { background-color: #f39c12 !important; }
        .bg-success { background-color: #27ae60 !important; }
        .bg-info { background-color: #3498db !important; }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            padding: 12px 30px;
            border-radius: 8px;
            font-weight: 500;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, #5a6fd8 0%, #6a4190 100%);
            transform: translateY(-1px);
        }

        .btn-outline-primary {
            border: 2px solid #667eea;
            color: #667eea;
            padding: 10px 25px;
            border-radius: 8px;
            font-weight: 500;
        }

        .btn-outline-primary:hover {
            background: #667eea;
            color: white;
        }

        .quick-stats {
            margin-bottom: 30px;
        }
    </style>
}

<div class="dealer-dashboard">
    <div class="container">
        <!-- Debug Info (temporary) -->
        <div class="debug-info">
            <h6>?? Debug Info:</h6>
            <strong>User Role:</strong> @ViewBag.UserRole<br/>
            <strong>Dealer ID:</strong> @ViewBag.DealerId<br/>
            <strong>Stats:</strong> @(ViewBag.Stats != null ? "Loaded" : "Not loaded")<br/>
            <strong>Time:</strong> @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")
        </div>

        <!-- Dashboard Header -->
        <div class="dashboard-header">
            <h1><i class="bi bi-speedometer2 me-2"></i>Dealer Manager Dashboard</h1>
            <p class="text-muted">Welcome back! Manage your inventory requests and vehicle operations efficiently.</p>
        </div>

        <!-- Quick Stats -->
        <div class="quick-stats">
            <div class="stats-container">
                <h3 class="text-center mb-4">Inventory Request Statistics</h3>
                <div class="row g-4">
                    <div class="col-md-3">
                        <div class="stat-card">
                            <div class="stat-icon bg-primary">
                                <i class="bi bi-box-seam"></i>
                            </div>
                            <div class="stat-info">
                                <h4>Total Requests</h4>
                                <p class="stat-number">@(ViewBag.Stats?.ContainsKey("Total") == true ? ViewBag.Stats["Total"] : 0)</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-card">
                            <div class="stat-icon bg-warning">
                                <i class="bi bi-clock-history"></i>
                            </div>
                            <div class="stat-info">
                                <h4>Pending</h4>
                                <p class="stat-number">@(ViewBag.Stats?.ContainsKey("Pending") == true ? ViewBag.Stats["Pending"] : 0)</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-card">
                            <div class="stat-icon bg-success">
                                <i class="bi bi-check-circle"></i>
                            </div>
                            <div class="stat-info">
                                <h4>Approved</h4>
                                <p class="stat-number">@(ViewBag.Stats?.ContainsKey("Approved") == true ? ViewBag.Stats["Approved"] : 0)</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-card">
                            <div class="stat-icon bg-info">
                                <i class="bi bi-x-circle"></i>
                            </div>
                            <div class="stat-info">
                                <h4>Denied</h4>
                                <p class="stat-number">@(ViewBag.Stats?.ContainsKey("Denied") == true ? ViewBag.Stats["Denied"] : 0)</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="action-cards">
            <h3 class="text-center mb-4">Quick Actions</h3>
            <div class="row g-4">
                <div class="col-md-3">
                    <div class="action-card">
                        <div class="action-icon">
                            <i class="bi bi-plus-circle"></i>
                        </div>
                        <div class="action-content">
                            <h4>Create New Request</h4>
                            <p>Request new inventory for your dealership</p>
                            <a href="@Url.Action("Create", "Inventory")" class="btn btn-primary">
                                <i class="bi bi-plus me-1"></i>New Request
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="action-card">
                        <div class="action-icon">
                            <i class="bi bi-list-check"></i>
                        </div>
                        <div class="action-content">
                            <h4>My Requests</h4>
                            <p>View and track your inventory requests</p>
                            <a href="@Url.Action("MyRequests", "Inventory")" class="btn btn-outline-primary">
                                <i class="bi bi-eye me-1"></i>View Requests
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="action-card">
                        <div class="action-icon">
                            <i class="bi bi-car-front-fill"></i>
                        </div>
                        <div class="action-content">
                            <h4>Browse Vehicles</h4>
                            <p>Explore available vehicles for request</p>
                            <a href="@Url.Action("IndexVehicle", "Vehicle")" class="btn btn-outline-primary">
                                <i class="bi bi-search me-1"></i>Browse Vehicles
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="action-card">
                        <div class="action-icon">
                            <i class="bi bi-box"></i>
                        </div>
                        <div class="action-content">
                            <h4>Current Inventory</h4>
                            <p>View your current inventory status</p>
                            <a href="@Url.Action("View", "Inventory", new { dealerId = ViewBag.DealerId })" class="btn btn-outline-primary">
                                <i class="bi bi-box-seam me-1"></i>View Inventory
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Links Section -->
        <div class="row mt-4">
            <div class="col-md-6">
                <div class="action-cards">
                    <h4 class="text-center mb-3">Recent Activity</h4>
                    <div class="text-center">
                        <p class="text-muted">Track your latest inventory requests and updates here.</p>
                        <a href="@Url.Action("MyRequests", "Inventory")" class="btn btn-outline-primary">
                            <i class="bi bi-clock-history me-1"></i>View Activity
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="action-cards">
                    <h4 class="text-center mb-3">Need Help?</h4>
                    <div class="text-center">
                        <p class="text-muted">Contact support or browse our help documentation.</p>
                        <a href="@Url.Action("Index", "Home")#contact" class="btn btn-outline-primary">
                            <i class="bi bi-question-circle me-1"></i>Get Support
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>