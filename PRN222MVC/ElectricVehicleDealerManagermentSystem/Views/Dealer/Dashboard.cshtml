@{
    ViewData["Title"] = "Dealer Dashboard";
    Layout = "Dealer_Layout";
}

@section Styles {
    <link href="~/css/dashboard.css" asp-append-version="true" rel="stylesheet">
}

<div class="main-content">
    <!-- Content Area -->
    <div class="content-area">

        <!-- Dashboard Stats -->
        <div class="row mb-4">
            <!-- Successful Orders Card -->
            <div class="col-lg-4 mb-4">
                <div class="card border-0 shadow-sm h-100" id="successful-orders-card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h6 class="card-title text-muted mb-0">Successful Orders</h6>
                            <div class="spinner-border spinner-border-sm text-success d-none" role="status" id="successful-loading">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-muted small">Successful Orders</span>
                            <span class="fw-bold" id="successful-count">0 / 500</span>
                        </div>
                        <div class="progress mb-2" style="height: 6px;">
                            <div class="progress-bar bg-success" id="successful-progress" style="width: 0%"></div>
                        </div>
                        <small class="text-muted" id="successful-percentage">0% Done</small>
                    </div>
                </div>
            </div>

            <!-- Pending Orders Card -->
            <div class="col-lg-4 mb-4">
                <div class="card border-0 shadow-sm h-100" id="pending-orders-card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h6 class="card-title text-muted mb-0">Pending Orders</h6>
                            <div class="spinner-border spinner-border-sm text-primary d-none" role="status" id="pending-loading">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-muted small">Pending Orders</span>
                            <span class="fw-bold" id="pending-count">0 / 500</span>
                        </div>
                        <div class="progress mb-2" style="height: 6px;">
                            <div class="progress-bar bg-primary" id="pending-progress" style="width: 0%"></div>
                        </div>
                        <small class="text-muted" id="pending-percentage">0% Pending</small>
                    </div>
                </div>
            </div>

            <!-- Stock Quantity Card -->
            <div class="col-lg-4 mb-4">
                <div class="card border-0 shadow-sm h-100" id="stock-quantity-card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h6 class="card-title text-muted mb-0">Stock Quantity</h6>
                            <div class="spinner-border spinner-border-sm text-purple d-none" role="status" id="stock-loading">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-muted small">Stock Quantity</span>
                            <span class="fw-bold" id="stock-count">0 / 500</span>
                        </div>
                        <div class="progress mb-2" style="height: 6px;">
                            <div class="progress-bar" id="stock-progress" style="width: 0%; background-color: #6f42c1;"></div>
                        </div>
                        <small class="text-muted" id="stock-percentage">0% Stock</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts Row -->
        <div class="row">
            <!-- Yearly Summary Chart -->
            <div class="col-lg-8 mb-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h5 class="card-title mb-0">Successful Revenue by Month</h5>
                            <button type="button" class="btn btn-sm btn-outline-primary" id="refresh-dashboard" title="Refresh Data">
                                <i class="bi bi-arrow-clockwise"></i> Refresh
                            </button>
                        </div>
                        <!-- Chart Container -->
                        <div style="height: 300px; position: relative;">
                            <canvas id="yearlyChart" style="width: 100%; height: 100%;"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Side Cards -->
            <div class="col-lg-4">
                <!-- Earnings Card -->
                <div class="card border-0 shadow-sm mb-4" style="background: linear-gradient(135deg, #28a745, #20c997);">
                    <div class="card-body text-white">
                        <h6 class="card-title text-white-50 mb-3">Earnings</h6>
                        <h2 class="mb-0 text-white" id="total-earnings">$0</h2>
                        <p class="mb-3">TOTAL EARNINGS</p>
                    </div>
                </div>

                <!-- Sales Card -->
                <div class="card border-0 shadow-sm" style="background: linear-gradient(135deg, #007bff, #0056b3);">
                    <div class="card-body text-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h2 class="mb-0 text-white" id="total-sales">0</h2>
                                <p class="mb-0">TOTAL SALES</p>
                            </div>
                            <div>
                                <i class="bi bi-graph-up" style="font-size: 3rem; opacity: 0.7;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bottom Section -->
        <div class="row mt-4">
            <!-- Full Width Table -->
            <div class="col-12 mb-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h5 class="card-title mb-0">Recent Successful Orders</h5>
                            <div class="d-flex gap-2">
                                <button type="button" class="btn btn-sm btn-outline-secondary" id="refresh-orders" title="Refresh Orders">
                                    <i class="bi bi-arrow-clockwise"></i>
                                </button>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-borderless" id="recent-orders-table">
                                <thead>
                                    <tr class="text-muted small">
                                        <th>ORDER ID</th>
                                        <th>USERNAME</th>
                                        <th>DATE</th>
                                        <th>AMOUNT</th>
                                        <th>STATUS</th>
                                    </tr>
                                </thead>
                                <tbody id="recent-orders-tbody">
                                    <!-- Dynamic content will be loaded here -->
                                    <tr id="loading-row">
                                        <td colspan="5" class="text-center py-4">
                                            <div class="spinner-border spinner-border-sm text-primary" role="status">
                                                <span class="visually-hidden">Loading...</span>
                                            </div>
                                            <span class="ms-2 text-muted">Loading recent orders...</span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/dashboard-api.js" asp-append-version="true"></script>
}

