@model BusinessObject.BusinessObject.UserModels.Request.RegisterRequest

@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Register</h3>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["Error"]
                        </div>
                    }
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["Success"]
                        </div>
                    }
                    <form method="post" asp-action="Register" asp-controller="Account">
                        <div class="form-group mb-3">
                            <label asp-for="Username">Username:</label>
                            <input asp-for="Username" class="form-control" required>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Password">Password:</label>
                            <input asp-for="Password" type="password" class="form-control" required>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="ConfirmPassword">Confirm Password:</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" required>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Register</button>
                        </div>
                    </form>
                    <div class="text-center mt-3">
                        <p>Already have an account? <a asp-action="Login" asp-controller="Account">Login here</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>