@model IEnumerable<BusinessObject.BusinessObject.UserModels.Respond.GetUserRespond>

@{
    ViewData["Title"] = "User Management";
}

<div class="container">
    <h2>User Management</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    <!-- Search Form -->
    <div class="row mb-3">
        <div class="col-md-6">
            <form asp-action="GetAllUsers" method="get" class="form-inline">
                <div class="input-group">
                    <input type="text" name="searchUsername" class="form-control" placeholder="Search by username" value="@ViewBag.SearchUsername">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-primary">Search</button>
                        @if (!string.IsNullOrEmpty(ViewBag.SearchUsername))
                        {
                            <a asp-action="GetAllUsers" class="btn btn-secondary">Clear</a>
                        }
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>Username</th>
                    <th>Role</th>
                    <th>Dealer Type</th>
                    <th>Dealer Address</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserId</td>
                        <td>@user.Username</td>
                        <td>@user.Role</td>
                        <td>@(user.DealerTypeName ?? "N/A")</td>
                        <td>@(user.DealerAddress ?? "N/A")</td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="GetUserById" asp-route-id="@user.UserId" class="btn btn-info btn-sm">Details</a>
                                <a asp-action="EditUser" asp-route-id="@user.UserId" class="btn btn-warning btn-sm">Edit</a>
                                <form asp-action="DeleteUser" asp-route-id="@user.UserId" method="post" style="display: inline;">
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No users found.
        </div>
    }
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>