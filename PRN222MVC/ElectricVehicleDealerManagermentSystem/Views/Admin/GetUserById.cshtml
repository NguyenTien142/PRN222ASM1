@model Repositories.Model.User

@{
    ViewData["Title"] = "User Details";
}

<div class="container">
    <h2>User Details</h2>
    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">User ID</dt>
                <dd class="col-sm-9">@Model.UserId</dd>

                <dt class="col-sm-3">Username</dt>
                <dd class="col-sm-9">@Model.Username</dd>

                <dt class="col-sm-3">Role</dt>
                <dd class="col-sm-9">@Model.Role</dd>
            </dl>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="EditUser" asp-route-id="@Model.UserId" class="btn btn-primary">Edit</a>
        <a asp-action="GetAllUsers" class="btn btn-secondary">Back to List</a>
    </div>
</div>