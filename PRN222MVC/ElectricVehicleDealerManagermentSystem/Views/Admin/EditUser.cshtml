@model Repositories.Model.User

@{
    ViewData["Title"] = "Edit User";
}

@section Scripts {
    <script>
        function toggleDealerType() {
            var role = document.getElementById('Role').value;
            var dealerTypeDiv = document.getElementById('dealerTypeDiv');
            if (role === 'Dealer') {
                dealerTypeDiv.style.display = 'block';
            } else {
                dealerTypeDiv.style.display = 'none';
            }
        }
        document.addEventListener('DOMContentLoaded', function() {
            toggleDealerType();
            document.getElementById('Role').addEventListener('change', toggleDealerType);
        });
    </script>
}

<div class="container">
    <h2>Edit User</h2>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="EditUser" method="post">
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="DealerId" />
                <input type="hidden" asp-for="PasswordHash" />
                
                <div class="form-group mb-3">
                    <label asp-for="Username" class="control-label">Username</label>
                    <input asp-for="Username" class="form-control" readonly />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Role" class="control-label">Role</label>
                    <select asp-for="Role" class="form-select" id="Role" name="Role">
                        <option value="Admin">Admin</option>
                        <option value="EVN staff">EVN staff</option>
                        <option value="Dealer">Dealer</option>
                    </select>
                </div>

                <div class="form-group mb-3" id="dealerTypeDiv" style="display:none;">
                    <label asp-for="Dealer.DealerType.TypeName" class="control-label">Dealer Type</label>
                    <select asp-for="Dealer.DealerType.TypeName" class="form-select"
                            asp-items="@(new SelectList(new[] { "Manager", "Staff" }, Model.Dealer?.DealerType?.TypeName))">
                    </select>
                </div>


                <div class="form-group mb-3">
                    <label class="control-label">Dealer Address</label>
                    <input type="text" name="DealerAddress" class="form-control" value="@(Model.Dealer?.Address ?? "")" />
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a asp-action="GetAllUsers" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>