@model BusinessObject.BusinessObject.UserModels.Respond.GetDetailUserRespond

@{
    ViewData["Title"] = "Edit User";
}

<div class="container">
    <h2>Edit User</h2>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="EditUser" method="post">
                <input type="hidden" name="UserId" value="@Model.UserId" />
                
                <div class="form-group mb-3">
                    <label class="control-label">Username</label>
                    <input value="@Model.Username" class="form-control" readonly />
                </div>

                <div class="form-group mb-3">
                    <label class="control-label">Role</label>
                    <select name="Role" class="form-select" id="roleSelect">
                        <option value="Admin" selected="@(Model.Role == "Admin")">Admin</option>
                        <option value="EVN staff" selected="@(Model.Role == "EVN staff")">EVN Staff</option>
                        <option value="DealerStaff" selected="@(Model.Role == "DealerStaff")">Dealer Staff</option>
                        <option value="DealerManager" selected="@(Model.Role == "DealerManager")">Dealer Manager</option>
                    </select>
                </div>

                <div class="form-group mb-3" id="dealerTypeDiv">
                    <label class="control-label">Dealer Type</label>
                    <select name="DealerTypeName" class="form-select">
                        <option value="Headquarter" selected="@(Model.DealerTypeName == "Headquarter")">Headquarter</option>
                        <option value="Agent" selected="@(Model.DealerTypeName == "Agent")">Agent</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label class="control-label">Dealer Address</label>
                    <input type="text" name="DealerAddress" class="form-control" value="@Model.DealerAddress" />
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a asp-action="GetAllUsers" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            function toggleDealerTypeVisibility() {
                var role = $('#roleSelect').val();
                if (role === 'DealerStaff' || role === 'DealerManager') {
                    $('#dealerTypeDiv').show();
                } else {
                    $('#dealerTypeDiv').hide();
                }
            }

            $('#roleSelect').change(toggleDealerTypeVisibility);
            toggleDealerTypeVisibility(); // Run on page load
        });
    </script>
}