@model Repositories.Model.User

@{
    ViewData["Title"] = "Edit User";
}

<div class="container">
    <h2>Edit User</h2>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="EditUser" method="post">
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="DealerId" />
                <input type="hidden" asp-for="PasswordHash" />
                
                <div class="form-group mb-3">
                    <label asp-for="Username" class="control-label">Username</label>
                    <input asp-for="Username" class="form-control" readonly />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Role" class="control-label">Role</label>
                    <select asp-for="Role" class="form-select" id="roleSelect">
                        <option value="Admin">Admin</option>
                        <option value="EVN staff">EVN Staff</option>
                        <option value="DealerStaff">Dealer Staff</option>
                        <option value="DealerManager">Dealer Manager</option>
                    </select>
                </div>

                <div class="form-group mb-3" id="dealerTypeDiv">
                    <label class="control-label">Dealer Type</label>
                    <select name="DealerTypeName" class="form-select">
                        <option value="Headquarter">Headquarter</option>
                        <option value="Agent">Agent</option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label class="control-label">Dealer Address</label>
                    <input type="text" name="DealerAddress" class="form-control" value="@(Model.Dealer?.Address ?? "")" />
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a asp-action="GetAllUsers" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            function toggleDealerTypeVisibility() {
                var role = $('#roleSelect').val();
                if (role === 'DealerStaff' || role === 'DealerManager') {
                    $('#dealerTypeDiv').show();
                } else {
                    $('#dealerTypeDiv').hide();
                }
            }

            $('#roleSelect').change(toggleDealerTypeVisibility);
            toggleDealerTypeVisibility(); // Run on page load
        });
    </script>
}}