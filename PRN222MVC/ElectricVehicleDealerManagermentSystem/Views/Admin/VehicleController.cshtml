
@{
    ViewData["Title"] = "VehicleController";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

@section Styles {
    <link href="~/css/grid_bike.css" asp-append-version="true" rel="stylesheet">
}

<div class="main-content">

    <!-- Content Area -->
    <div class="content-area">

        <!-- Vehicle Listings Grid -->
        <div class="row">
            <div class="col-12">
                <div class="">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="col-md-3">
                                <label for="categorySelect" class="form-label text-muted mb-2">
                                    <i class="bi bi-funnel me-1"></i>Filter by Category
                                </label>
                                <select class="form-select category-selector" id="categorySelect" onchange="filterByCategory(this.value)">
                                    <option value="all" selected>🌐 All Vehicles (20)</option>
                                    <option value="car">🚗 Cars (6)</option>
                                    <option value="bike">🏍️ Bikes (6)</option>
                                    <option value="bicycle">🚲 Bicycles (8)</option>
                                </select>
                            </div>
                            <div class="pagination-info text-muted small">
                                <!-- Pagination info will be inserted here -->
                            </div>
                        </div>

                        <!-- Dynamic Vehicle Grid Container -->
                        <div class="vehicle-listings-grid" id="vehicleListingsGrid">
                            <!-- Vehicles will be dynamically inserted here -->
                            <div class="loading-placeholder text-center py-5">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                                <p class="mt-3 text-muted">Loading vehicle listings...</p>
                            </div>
                        </div>

                        <!-- Pagination Controls -->
                        <div class="pagination-container mt-4">
                            <!-- Pagination will be inserted here -->
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

